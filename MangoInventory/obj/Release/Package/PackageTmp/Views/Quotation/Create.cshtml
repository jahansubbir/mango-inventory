    <script src="~/Scripts/product-details.js"></script>
    <script src="~/Scripts/create-quotation.js"></script>
<script>
    $(document).ready(function () {
        $("#Quote").hide();
        $("#completeCheckbox").change(function () {
            if (this.checked) {
                $("#CategoryId").hide();
                $("#SubCategoryId").hide();
                $("#TypeId").hide();
                $("#ProductId").hide();
                //$("#ProductName").hide();
                $("#Quantity").hide();
                $("#UnitPrice").hide();
                $("#Quote").show();
                //$("#ReceiveDate").hide();
            } else {
                $("#CategoryId").show();
                $("#SubCategoryId").show();
                $("#TypeId").show();
                $("#ProductId").show();
                //$("#ProductName").hide();
                $("#Quantity").show();
                $("#UnitPrice").show();
                $("#Quote").hide();

            }
        });
    })
</script>
