
@{
    ViewBag.Title = "Report";
}
@using (Html.BeginForm(null,null,FormMethod.Post,new {@id="reportForm"}))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.Label("From", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("From")
        </div>
    </div>
    <div class="form-group">
        @Html.Label("To", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("To")
        </div>
    </div>
    <div class="form-actions no-color">
        <input type="submit" value="Report" class="btn btn-default" /> |
        @*@Html.ActionLink("Back to List", "Index")*@
        <link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet" />
    </div>
}
@section scripts{

    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <script>
        $(document).ready(function() {
            $("#From").datepicker({
                autoclose: true,
                todayHighlight: true,
                endDate: "Today"
            });
            $("#To").datepicker({
                autoclose: true,
                todayHighlight: true,
                endDate: "Today"
            });
        });
    </script>
    <script>
        $(document).ready(function() {
            $("#reportForm").validate({
                rules: {
                    From: {
                        required: true
                    },
                    To: {
                        required: true
                    }
                },
                messages: {
                    From: {
                        required: "Select Date"
                    },
                    To: {
                        required: "Select Date"
                    }

                }
            });
        })
    </script>


}
