                <thead>
                <tr>
                    <td>@Html.TextBoxFor(model => model.ReceiveDate,new{@placeholder="Date"})</td>
                </tr>
                <tr>
                    <td>@Html.TextBoxFor(model => model.Supplier,new{@placeholder="Supplier"})</td>
                </tr>
