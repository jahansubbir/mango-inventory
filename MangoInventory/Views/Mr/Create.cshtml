            if (this.checked) {
                $("#ReceiveDate").hide();
                $("#Supplier").hide();
                $("#ProductId").hide();
                $("#ProductName").hide();
                $("#Quantity").hide();
                $("#UnitPrice").hide();
                $("#Receive").show();
                //$("#ReceiveDate").hide();
            } else {
                $("#Receive").hide();
                $("#ReceiveDate").show();
                $("#Supplier").show();
                $("#ProductName").show();
                $("#ProductId").show();
                $("#Quantity").show();
                $("#UnitPrice").show();

            }
        });
    })
</script>

